<Window x:Class="DiscUsage.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:DiscUsage.Views"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="Disc Usage" Height="800" Width="800">

    <StackPanel Orientation="Vertical">
        <Button Content="Load" Width="100" HorizontalAlignment="Left" Command="{Binding LoadCommand}"/>
        <views:DiscSpaceView x:Name="DiscSpaceControl"/>
        <StackPanel Orientation="Horizontal">
            <views:DiscSpaceCanvasView x:Name="DiscSpaceCanvasControl" />
            <StackPanel Width="20"></StackPanel>
            <views:DiscSpaceCanvasView x:Name="DiscSpaceCanvasControl2" />
        </StackPanel>
        
    </StackPanel>
</Window>
